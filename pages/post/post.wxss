/* pages/post/post.wxss */
@import "post-item/post-item-tpl.wxss";

swiper{
  width: 100%;
  height: 450rpx;
}

swiper image{
  width: 100%;
  height: 450rpx;
}

swiper indicator-color{
  color: white;
}
swiper indicator-active-color{
  color: red;
}

.post-container{
  display: flex;
  flex-direction: row;
  /* align-items: center; */
  background-color:blanchedalmond
}
.post-coupon{
  width: 27%;
  height: 120px;
}
.post-coupon-button{
  width: 12%;
  height: 120px;
}
.post-image{
  width: 95px;
  height: 120px;
  margin-left: 5px;
}
.post-image-test{
  align-items: center;
  font-size: 15px;
  margin-bottom: 15px;
}
.post-buttonimage{
  width: 70px;
  height: 120px;
  margin-left: 5px;
}
.textAndPicture-container{
  flex-direction: column;
  display: flex;
  margin: 20rpx 0 40rpx;
  background-color: #fff;
  border-bottom: 1px solid #ededed;
  padding-bottom: 5px;
}
.post-author-date{
  margin: 10rpx 0 20rpx 10px;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.post-author-date image{
  width: 50rpx;
  height: 50rpx;
}
.post-author-date text{
  margin-left: 20px;
}

.content-text{
  font-size: 25rpx;
  margin-bottom: 10px;
  margin-left: 5px;
  margin-right: 5px;
}

.post-like{
  display: flex;
  flex-direction: row;
  font-size: 13px;
  line-height: 16px;
  margin-left: 10px;
  align-items: center;
}

.post-like image{
  height: 22px;
  width: 22px;
  margin-right: 8px;
}
.post-like text{
  margin-right: 20px;
}

.tool{
  height:64rpx;
  text-align:center;
  line-height:64rpx;
  flex-direction: row;
  margin:20rpx 28rpx 20rpx 0;
}

.tool-item{
  display: inline-blcok;
  vertical-align:top;
  margin-right:30rpx;
}

.tool-item image{
  height:30rpx;
  width:30rpx;
  vertical-align: -3rpx;
  margin-right: 10rpx;
}

.comment image{
  transform: scale(.85);
}

.single-view-container{
  float:left;
  margin-bottom: 40rpx;
}

.grid-container{
  height: 1300rpx;
  margin:40rpx 0 40rpx 6rpx;
}
.movie-container {
  display: flex;
  flex-direction: column;
  padding: 0 22rpx;
}

.movie-img {
  width: 300rpx;
  height: 270rpx;
  padding-bottom: 20rpx;
}

.movie-title{
    margin-bottom: 16rpx;
    font-size: 24rpx;
}